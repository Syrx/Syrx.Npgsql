<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.1.0</Version>
    <Description>Package built specifically for PostgreSQL, contains all the necessary package references for simplified installation.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/syrx</PackageProjectUrl>
    <RepositoryUrl>https://github.com/syrx</RepositoryUrl>
    <PackageReleaseNotes>• Updated dependency</PackageReleaseNotes>
    <Authors>@sextondjc</Authors>
    <Company>Syrx</Company>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Syrx" Version="1.*" />
    <PackageReference Include="Syrx.Commanders.Databases" Version="1.*" />
    <PackageReference Include="Syrx.Readers.Databases" Version="1.*" />
    <PackageReference Include="Syrx.Settings.Databases" Version="1.*" />    
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Syrx.Connectors.Databases.Npgsql\Syrx.Connectors.Databases.Npgsql.csproj" />
  </ItemGroup>

</Project>
